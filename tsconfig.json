{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5"
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  },  
  "include": [
    "./src/**/*.{ts,tsx}"
  ]
}
